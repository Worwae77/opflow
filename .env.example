# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=opflow
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# n8n Configuration
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_PATH=/
N8N_EDITOR_BASE_URL=http://localhost:5678

# Authentication
N8N_AUTH_ENABLED=true
N8N_BASIC_AUTH_ACTIVE=false
N8N_JWT_AUTH_ACTIVE=true
N8N_JWT_AUTH_HEADER=Authorization

# Keycloak SSO Configuration
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8080/auth
KEYCLOAK_REALM=opflow
KEYCLOAK_CLIENT_ID=your_client_id
KEYCLOAK_CLIENT_SECRET=your_client_secret

# Security
N8N_ENCRYPTION_KEY=your_32char_encryption_key_here

# Jenkins Configuration (for Jenkins node)
JENKINS_URL=http://jenkins:8080
JENKINS_USERNAME=your_jenkins_user
JENKINS_API_TOKEN=your_jenkins_token

# HashiCorp Vault Configuration (for Vault node)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token
VAULT_NAMESPACE=your_namespace

# JFrog Artifactory Configuration
ARTIFACTORY_URL=http://artifactory:8081
ARTIFACTORY_USERNAME=your_artifactory_user
ARTIFACTORY_PASSWORD=your_artifactory_password

# Ansible AWX Configuration
AWX_HOST=http://awx:8043
AWX_USERNAME=your_awx_user
AWX_PASSWORD=your_awx_password

# Notification Settings
SLACK_WEBHOOK_URL=your_slack_webhook_url
MS_TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Logging
LOG_LEVEL=info
LOG_OUTPUT=file
LOG_FILE_PATH=logs/opflow.log

# Docker/Container Settings
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=opflow-network